<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/txState"
        android:theme="@style/MainTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CODE - UF - STATE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:theme="@style/MainGridLayout"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txState">

        <TextView
            android:id="@+id/titleCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cases: " />

        <TextView
            android:id="@+id/numCases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="numCases" />

        <TextView
            android:id="@+id/titleDeath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deaths: " />

        <TextView
            android:id="@+id/numDeaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="numDeath" />

        <TextView
            android:id="@+id/titleSuspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suspects: " />

        <TextView
            android:id="@+id/numSuspects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="numSuspects" />

        <TextView
            android:id="@+id/titleRefuses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refuses: " />

        <TextView
            android:id="@+id/numRefuses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="numRefuses" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>